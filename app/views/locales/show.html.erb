<%- model_class = Locale -%>
<div class="page-header">
  <h1><%=t '.title', :default => Locale %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:code) %></dt>
      <dd><pre class="prettyprint"><%= @locale.code %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @locale.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:icon_class) %></dt>
      <dd><pre class="prettyprint"><%= @locale.icon_class %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:right_to_left) %></dt>
      <dd><pre class="prettyprint"><%= @locale.right_to_left %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:position) %></dt>
      <dd><pre class="prettyprint"><%= @locale.position %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              locales_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_locale_path(@locale), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              locale_path(@locale),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

