<h1>Listing locales</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Icon class</th>
      <th>Right to left</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locales.each do |locale| %>
      <tr>
        <td><%= locale.code %></td>
        <td><%= locale.name %></td>
        <td><%= locale.icon_class %></td>
        <td><%= locale.right_to_left %></td>
        <td><%= locale.position %></td>
        <td><%= link_to 'Show', locale %></td>
        <td><%= link_to 'Edit', edit_locale_path(locale) %></td>
        <td><%= link_to 'Destroy', locale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Locale', new_locale_path %>
