<h1>Listing page_translations</h1>

<table>
  <thead>
    <tr>
      <th>Locale</th>
      <th>Url code</th>
      <th>Title</th>
      <th>Body</th>
      <th>Page</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @page_translations.each do |page_translation| %>
      <tr>
        <td><%= page_translation.locale %></td>
        <td><%= page_translation.url_code %></td>
        <td><%= page_translation.title %></td>
        <td><%= page_translation.body %></td>
        <td><%= page_translation.page %></td>
        <td><%= link_to 'Show', page_translation %></td>
        <td><%= link_to 'Edit', edit_page_translation_path(page_translation) %></td>
        <td><%= link_to 'Destroy', page_translation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

